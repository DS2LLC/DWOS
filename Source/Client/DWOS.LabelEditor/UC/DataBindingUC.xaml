<UserControl x:Class="DWOS.LabelEditor.DataBindingUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:DWOS.LabelEditor"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="532">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10" Height="24" VerticalAlignment="Top">
            <TextBlock Text="Data Field:" VerticalAlignment="Center" Margin="0,0,10,0"></TextBlock>
            <TextBox Name="txtItemDataField" Width="80" ></TextBox>
            <TextBlock Text="Format String:" VerticalAlignment="Center" Margin="30,0,10,0" ></TextBlock>
            <TextBox Name="txtItemDataFieldFormatString" Width="160" ></TextBox>
        </StackPanel>        
    </Grid>
</UserControl>
